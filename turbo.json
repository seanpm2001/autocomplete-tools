{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["__tests__/**", "test/**", "tests/**"]
    },
    "test:overwrite": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["__tests__/**", "test/**", "tests/**"]
    }
  }
}